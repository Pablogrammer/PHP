{% extends 'base.html.twig' %}

{% block title %}Ejemplar{% endblock %}

{% block body %}
    <h1>Ejemplar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ejemplar.id }}</td>
            </tr>
            <tr>
                <th>Libro</th>
                <td>{{ dump(ejemplar) }}</td>
                <td>{{ ejemplar.isbn }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ ejemplar.estado ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Estanteria</th>
                <td>{{ ejemplar.estanteria }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ejemplar_index') }}">back to list</a>

    <a href="{{ path('app_ejemplar_edit', {'id': ejemplar.id}) }}">edit</a>

    {{ include('ejemplar/_delete_form.html.twig') }}
{% endblock %}
