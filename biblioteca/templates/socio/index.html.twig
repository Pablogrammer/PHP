{% extends 'base.html.twig' %}

{% block title %}Lista de Socios{% endblock %}

{% block body %}
    <h1>Socio index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for socio in socios %}
            <tr>
                <td>{{ socio.id }}</td>
                <td>{{ socio.nombre }}</td>
                <td>{{ socio.apellidos }}</td>
                <td>
                    <a href="{{ path('app_socio_show', {'id': socio.id}) }}">show</a>
                    <a href="{{ path('app_socio_edit', {'id': socio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_socio_new') }}">Create new</a>
{% endblock %}
